generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      String    @default("siswa")
  attendance Attendance[]
}

model Attendance {
  id        Int      @id @default(autoincrement())
  userId    Int
  date      DateTime @default(now())
  status    String
  user      User     @relation(fields: [userId], references: [id])
}
